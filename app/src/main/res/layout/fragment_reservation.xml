    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:elevation="4dp"
            android:gravity="center"
            android:text="Mikortól"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/datepicker_from"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="0.5"
                android:background="@drawable/left_bg"
                android:gravity="center"
                android:text="Dátum beállítása"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:id="@+id/timepicker_from"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:padding="8dp"
                android:gravity="center"
                android:layout_weight="0.5"
                android:background="@drawable/right_bg"
                android:text="Időpont beállítása"
                android:textColor="@color/colorPrimaryDark" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:elevation="4dp"
            android:gravity="center"
            android:text="Meddig"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/datepicker_to"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="0.5"
                android:background="@drawable/left_bg"
                android:gravity="center"
                android:text="Dátum beállítása"
                android:textColor="@color/colorPrimaryDark" />
            <Button
                android:id="@+id/timepicker_to"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/right_bg"
                android:text="Időpont beállítása"
                android:textColor="@color/colorPrimaryDark" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/colorPrimaryDark"
            android:elevation="4dp"
            android:gravity="center"
            android:text="Megjegyzés"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="24dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:maxLines="8"
            android:padding="8dp"
            android:background="@drawable/edittext_bg"
            android:layout_weight="1"/>

    </LinearLayout>

