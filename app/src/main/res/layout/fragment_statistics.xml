<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:layout_weight="0.5"
            android:gravity="center_vertical"
            android:text="Összes megtett távolság"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            android:layout_weight="0.5"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="176523 km"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:layout_weight="0.5"
            android:gravity="center_vertical"
            android:text="Összes fizetett összeg"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            android:layout_weight="0.5"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="10013 FT"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:layout_weight="0.5"
            android:gravity="center_vertical"
            android:text="Töltések száma"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            android:layout_weight="0.5"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="63"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:layout_weight="0.5"
            android:gravity="center_vertical"
            android:text="Átlag fogyasztás"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            android:layout_weight="0.5"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="20kWh / 100km"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:layout_weight="0.5"
            android:background="@drawable/edittext_bg"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:text="Új felvétele"
            android:textColor="@color/colorPrimaryDark" />
    </LinearLayout>


</LinearLayout>